{% extends 'base.j2' %}
{% block content %}

<div style="height:100vh;" id="chart_div"></div>

{% block javascript %}
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script>
google.charts.load('current', {packages: ['corechart', 'bar']});
google.charts.setOnLoadCallback(drawBasic);

function drawBasic() {

     var data = google.visualization.arrayToDataTable([
        ["Element", "Number of Students", { role: "style" } ],
        ["Students Placed", {{ dep.students_placed }}, 'color: green'],
        ["Students Shortlisted", {{ dep.students_shortlisted }}, 'color: yellow'],
        ['Total Students', {{ dep.total_students }},  'color: blue']
      ]);

      var options = {
        title: 'Placement Statistics',
        legend: {position:'none'}, 
      };

      var chart = new google.visualization.ColumnChart(
        document.getElementById('chart_div'));

      chart.draw(data, options);
}
</script>
{% endblock %}

{% endblock %}

